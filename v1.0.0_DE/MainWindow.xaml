<Window
    x:Class="VeloxDNS_Complete.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="VeloxDNS – Modern UI" Height="600" Width="800"
    WindowStartupLocation="CenterScreen"
    Background="#f3f3f3"
    FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="VeloxDNS" FontSize="26" FontWeight="Bold" Foreground="#333" />

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- DNS Eingabe -->
            <StackPanel Grid.Column="0" Margin="0 0 20 0">
                <TextBlock Text="Netzwerkadapter" FontWeight="Bold" FontSize="14"/>
                <ComboBox x:Name="AdapterComboBox" Margin="0,5,0,15" Height="30"/>

                <TextBlock Text="IPv4 DNS" FontWeight="Bold" />
                <TextBox x:Name="IPv4Dns1Box" Margin="0,5,0,5" Height="28" />
                <TextBox x:Name="IPv4Dns2Box" Margin="0,0,0,15" Height="28" />

                <TextBlock Text="IPv6 DNS" FontWeight="Bold" />
                <TextBox x:Name="IPv6Dns1Box" Margin="0,5,0,5" Height="28" />
                <TextBox x:Name="IPv6Dns2Box" Margin="0,0,0,15" Height="28" />

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="DNS setzen" Click="SetDns_Click" Width="120" Margin="0,0,10,0" Height="30" />
                    <Button Content="Zurücksetzen" Click="SetAuto_Click" Width="120" Height="30" />
                    <Button Content="DNS testen" Click="TestDns_Click" Width="120" Height="30" Margin="0,10,0,0" />
                </StackPanel>
            </StackPanel>

            <!-- Profile -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Profile" FontWeight="Bold" FontSize="14" />
                <ComboBox x:Name="ProfileComboBox" Margin="0,5,0,10" Height="30"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Laden" Click="LoadProfile_Click" Width="80" Margin="0,0,5,0" Height="28" />
                    <Button Content="Löschen" Click="DeleteProfile_Click" Width="80" Height="28" />
                </StackPanel>
                <TextBox x:Name="NewProfileNameBox" Margin="0,10,0,5" Height="28" />
                <Button Content="Speichern" Click="SaveProfile_Click" Width="120" Height="30" />

                <Separator Margin="0,20,0,10" />
                <Button Content="Adapter-Info anzeigen" Click="ShowAdapterInfo_Click" Width="200" Height="30" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
